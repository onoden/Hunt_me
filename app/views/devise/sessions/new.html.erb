<% if false %>
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
<% end %>

<div class="container">
  <div class="card card-container">
     <!-- <img class="profile-img-card" src="//lh3.googleusercontent.com/-6V8xOA6M7BA/AAAAAAAAAAI/AAAAAAAAAAA/rzlHcD0KYwo/photo.jpg?sz=120" alt="" /> -->
    <img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
    <p id="profile-name" class="profile-name-card"></p>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <form class="form-signin">
        <span id="reauth-email" class="reauth-email"></span>
        <%= f.email_field :email, autofocus: true, :class => "form-control", :id => "inputEmail", :placeholder => "メールアドレス" %>
        <%= f.password_field :password, autocomplete: "off", :class => "form-control", :id => "inputPassword", :placeholder => "パスワード" %>
        <% if devise_mapping.rememberable? -%>
          <div id="remember" class="checkbox">
            <%= f.check_box :remember_me, :class =>"checkbox"%>
            <%= f.label :remember_me %>
          </div>
        <% end -%>
        <%= f.submit "ログイン", :class =>  "btn btn-lg btn-primary btn-block btn-signin"%>
      </form>
    <% end %>
    <a href="#" class="forgot-password">
      Forgot the password?
    </a>
  </div>
</div>
