<!DOCTYPE html>
<html>
<head>
  <title>SHUKKETU</title>
  <%= stylesheet_link_tag   'application', media: 'all' %>
  <%= javascript_include_tag  'application' %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
  <!-- Material Dsign Lite -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <link rel="stylesheet" href="https://code.getmdl.io/1.1.3/material.indigo-pink.min.css">
  <script defer src="https://code.getmdl.io/1.1.3/material.min.js"></script>
</head>
<body>
<% if false %>
  <nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample7">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">
        SHUKKETU
      </a>
    </div>
      <div class="collapse navbar-collapse" id="navbarEexample7">
      <ul class="nav navbar-nav">
        <li><%= link_to "登録", new_student_path %></li>
        <li><%= link_to "出欠をとる", shukketu_path %></li>
        <li><%= link_to "トップページへ", timeline_path %></li>
        <li><%= link_to "ランキングをみる", ranking_path %></li>
      </ul>
      <% if user_signed_in? %>
      <div class="navbar-text navbar-right">
      <%= current_user.email %>
        <%= link_to 'プロフィール変更', edit_user_registration_path %>
        <%= link_to 'ログアウト', destroy_user_session_path, method: :delete %>
      </div>
      <% else %>
      <div class="navbar-text navbar-right">
        <%= link_to 'サインアップ', new_user_registration_path %>
        <%= link_to 'ログイン', new_user_session_path %>
      </div>
      <% end %>
    </div>
  </div>
</nav>
<% end %>

<div class="mdl-layout mdl-js-layout mdl-layout--fixed-header mdl-layout--fixed-tabs">
  <header class="mdl-layout__header">
    <div class="mdl-layout__header-row">
      <!-- Title -->
      <span class="mdl-layout-title">SHUKKETU</span>
    </div>
    <!-- Tabs -->
     <% if user_signed_in? %>
    <div class="mdl-layout__tab-bar mdl-js-ripple-effect">
      <%= link_to "登録", new_student_path, :class => @class1, :id => "tab1" %>
      <%= link_to "出欠をとる", shukketu_path, :class => @class2, :id => "tab2" %>
      <%= link_to "トップページへ", timeline_path, :class => @class3, :id => "tab3" %>
      <%= link_to "ランキングをみる", ranking_path, :class => @class4, :id => "tab4" %>
    </div>
    <% end %>
  </header>
  <div class="mdl-layout__drawer">
    <span class="mdl-layout-title">SHUKKETU</span>
    <nav class="mdl-navigation">
      <% if user_signed_in? %>
          <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, :class => "mdl-navigation__link" %>
      <% else %>
          <%= link_to 'サインアップ', new_user_registration_path, :class => "mdl-navigation__link" %>
          <%= link_to 'ログイン', new_user_session_path, :class => "mdl-navigation__link" %>
      <% end %>
    </nav>
  </div>
  <main class="mdl-layout__content">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
  </main>
</div>


</body>
</html>

