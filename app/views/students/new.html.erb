<div class="demo-card-image mdl-card mdl-shadow--2dp mdl-cell mdl-cell--6-col" style=" margin:0 auto; height:430px;">
  <div style="position:relative; top:100px; left:150px;">
  <%= form_for @student do |f| %>
    <div class="container">
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.text_field :name, :class => "mdl-textfield__input" %>
        <label class="mdl-textfield__label" for="sample1">Name...</label>
      </div>
    </div>
    <% if @student.errors.any? %>
        <!-- <div class="alert alert-danger" role="alert" style="margin:20px;"> -->
          <%@student.errors.messages[:name].each do |message| %>
            <strong style="color:red; padding:20px;">エラー：<%= message %></strong>
          <% end %>
        <!-- </div> -->
    <% end %>

    <div class="container">
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.text_field :student_id, :class => "mdl-textfield__input" %>
        <label class="mdl-textfield__label" for="sample1">ID...</label>
      </div>
    </div>
    <% if @student.errors.any? %>
        <!-- <div class="alert alert-danger" role="alert" style="margin:20px;"> -->
          <%@student.errors.messages[:student_id].each do |message| %>
            <strong style="color:red; padding:20px;">エラー：<%= message %></strong>
          <% end %>
        <!-- </div> -->
    <% end %>


    <div class="container" style="margin-top:10px;">
      <%= f.file_field :image %>
    </div>

    <div class="container">
      <%= button_tag :type => "submit", :class => "mdl-button mdl-js-button mdl-button--fab mdl-button--colored", :style => "position:relative; margin-top:10px;" do %>
      <i class="material-icons">add</i>
      <% end %>
    </div>
  <% end %>
  </div>
</div>

